  ctx = this.getContext("2d");
  ctx.beginPath();
  //ctx.fillStyle = "black";
  ctx.rect(0, 0, 12, 12);
  ctx.fillText(" 8", 0, 10);
  ctx.fillText("Archimage", 22, 10);
  ctx.rect(87, 138, 12, 12);
  ctx.fillText(" 8", 87, 148);
  ctx.rect(0, 138, 12, 12);
  ctx.fillText(" 8", 0, 148);
